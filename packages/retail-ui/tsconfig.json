{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "target": "es3",
    "lib": ["es2017", "es2015", "dom"],
    "importHelpers": true,
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "**/node_modules",
    "**/components/**/__tests__",
    "**/components/**/__stories__"
  ]
}
